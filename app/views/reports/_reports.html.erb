<table>
  <thead>
    <tr>
      <th></th>
      <th><%= Report.human_attribute_name(:title) %></th>
      <th><%= User.human_attribute_name(:name) %></th>
      <th><%= Report.human_attribute_name(:created_at) %></th>
      <th><%= Report.human_attribute_name(:updated_at) %></th>
      <th colspan="3"></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <th>
          <% if report.user.avatar.attached? %>
            <%= image_tag report.user.avatar.variant(resize_to_fill: [30, 30])%>
          <% end %>
        </th>
        <td><%= report.title %></td>
        <td>
          <% if report.user.name.empty? %>
            <%= report.user.email %>
          <% else %>
            <%= report.user.name %>
          <% end %>
        </td>
        <td><%= report.created_at.to_s(:datetime_jp) %></td>
        <td><%= report.updated_at.to_s(:datetime_jp) %></td>
        <td><%= link_to t('views.common.show'), report %></td>
        <% if current_user == report.user %>
          <td><%= link_to t('views.common.edit'), edit_report_path(report) %></td>
          <td><%= link_to t('views.common.destroy'), report, method: :delete, data: { confirm: t('views.common.delete_confirm') } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
